{% extends 'base.html.twig' %}


{% block main %}
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2">
            {% for product in products %}
            <div class="col mb-4">
                <div class="card-body">
                    <h5 class="card-title">{{ product.title }}</h5>
                    <p class="card-text">{{ product.description }}</p>
                    <a href="{{ path('product_order', {"id": product.id}) }}" class="btn btn-primary">{{ 'Order'|trans }}</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
