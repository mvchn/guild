{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1> {{ product.title }}</h1>
                <br>
                {% if stock is defined and stock|length > 0 %}
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-group">
                                {% for item in stock %}
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                    {% if item.order is not null %}
                                        {{ item.startAt|date }}
                                        <span>
                                        {#                                            <a href="{{ url('product_order', {"id":product.id, "stockId":item.id}) }}" class="btn btn-outline-primary">Order {{ item.startAt|date }}</a>#}
                                        <form action="{{ url('stock_order', {id: item.id}) }}" method="post" id="order-form">
                                            <input type="hidden" name="token" value="{{ csrf_token('order') }}" />
                                            <button type="submit" class="btn btn-outline-primary">
                                                <i class="fa fa-trash" aria-hidden="true"></i>
                                                Order
                                            </button>
                                        </form>
                                        </span>
                                    {% else %}
                                        {{ item.startAt|date }}
                                        <span>
                                            <a href="{{ url('product_order', {"id":product.id, "stockId":item.id}) }}" class="btn btn-outline-primary disabled">Unavailable</a>
                                        </span>
                                    {% endif %}

                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                {% else %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
