{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1> {{ product.title }}</h1>
                {% if stock is defined and stock|length > 0 %}
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    {% for item in stock %}
                                        {% if item.order is not null %}
                                            <a href="{{ url('product_order', {"id":product.id, "stockId":item.id}) }}" class="btn btn-outline-primary">Order {{ item.startAt|date }}</a>
                                        {% else %}
                                            <a href="{{ url('product_order', {"id":product.id, "stockId":item.id}) }}" class="btn btn-outline-primary disabled">Unavailable {{ item.startAt|date }}</a>
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
