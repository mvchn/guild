{% extends 'knp_menu.html.twig' %}

{% block label %}
    {%- if item.getExtra('icon') -%}
        <i class="{{ item.getExtra('icon') }}"></i>
    {%- endif -%}

    <span>
    {%- set translation_domain = item.extra('translation_domain', 'app') -%}
    {%- set label = item.label -%}
    {%- if translation_domain is not same as('app') -%}
        {%- set label = label|trans(item.extra('translation_params', {}), translation_domain) -%}
    {%- endif -%}
    {%- if options.allow_safe_labels and item.extra('safe_label', false) %}{{ label|raw }}{% else %}{{ label }}{% endif -%}
        </span>
    {%- if item.getExtra('badge') -%}
        <span class="badge bg-blue-400 align-self-center ml-auto">{{ item.getExtra('badge') }}</span>
    {%- endif -%}
{%- endblock -%}
